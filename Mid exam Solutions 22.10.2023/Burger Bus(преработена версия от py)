using System;

class Program
{
    static void Main()
    {
        int numberCity = int.Parse(Console.ReadLine());
        double totalProfit = 0;

        for (int i = 1; i <= numberCity; i++)
        {
            string name = Console.ReadLine();
            double earned = double.Parse(Console.ReadLine());
            double expenses = double.Parse(Console.ReadLine();

            if (i % 3 == 0)
            {
                expenses *= 1.5;
            }
            else if (i % 5 == 0)
            {
                earned *= 0.9;
            }

            double profit = earned - expenses;
            totalProfit += profit;
            Console.WriteLine($"In {name} Burger Bus earned {profit:F2} leva.");
        }

        Console.WriteLine($"Burger Bus total profit: {totalProfit:F2} leva.");
    }
}
